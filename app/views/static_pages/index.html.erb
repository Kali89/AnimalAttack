<div class="center hero-unit">
	<h1>Animal Attack</h1>
	<p> Who will win when nature collides? </p>
	<% if @animal %>
	<div id="animalfacts"></div>
	<div class="animalcontainerright">
	<h2> <%= @animal.name %> </h2> 
	<%= link_to image_tag(@animal.attachment.url(:large)), voting_path(@animal), :remote => true, :id => "FirstAnimal"  %>
	</div>
	<div class="animalcontainerleft">
	<h2> <%= @animal2.name %> </h2>
	<%= link_to image_tag(@animal2.attachment.url(:large)), voting_path(@animal2), :remote => true, :id => "SecondAnimal"  %>
	</div>
	<%= form_for @animal, :url => {:action => "edit" }, :remote => true do |f| %>
	<%= f.hidden_field @animal.id, :value => @animal.rating %>
	<%= f.hidden_field @animal2.id, :value => @animal2.rating %>
	<% end %>
	<%= form_for @animal2, :url => {:action  => "edit"}, :remote => true do |f| %>
	<%= f.hidden_field @animal2.id, :value => @animal2.rating %>
	<%= f.hidden_field @animal.id, :value => @animal.rating %>
	<% end %>
	<% else %>
	<p> Not working </p>
	<% end %>
</div>


