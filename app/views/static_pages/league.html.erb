<% provide(:title, 'League Table') %>
<h1>League Table</h1>
<p> Get the up to date table of how the various animals are getting on in their respective leagues. </p>
<h3> Premier League </h3>
		<table>
		<thead>
			<th> Ranking </th>
			<th> Name </th>
			<th> Played </th>
			<th> Games Won </th>
			<th> Rating </th>
		</thead>
		<% count = 0 %>
		<% @animal.each do |animal| %>
			<tr>
			<% count += 1 %>
			<td>
				<%= count %>
			</td>
			<td>
				<%= animal.name.to_s %>
			</td>
			<td>
				<%= animal.match_count.to_s %>
			</td>
			<td>
				<%= animal.matches_won.to_s %>
			</td>
			<td>
				<%= animal.rating %>
			</td>
			</tr>
		<% end %>
		<% end %>
		</table>


		


