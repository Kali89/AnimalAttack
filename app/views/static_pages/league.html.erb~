<% provide(:title, 'League Table') %>
<h1>League Table</h1>
<p> Get the up to date table of how the various animals are getting on in their respective leagues. </p>
<h3> Premier League </h3>
		<table>
		<thead>
			<th> Ranking </th>
			<th> Name </th>
			<th> Played </th>
			<th> Games Won </th>
			<th> Rating </th>
		</thead>
		<% count = 0 %>
		<% while count < 5 %>
		<% @animala.each do |animal| %>
			<tr>
			<% count += 1 %>
			<td>
				<%= count %>
			</td>
			<td>
				<%= animala.name.to_s %>
			</td>
			<td>
				<%= animala.match_count.to_s %>
			</td>
			<td>
				<%= animala.matches_won.to_s %>
			</td>
			<td>
				<%= animala.rating %>
			</td>
			</tr>
		<% end %>
		<% end %>
		</table>
